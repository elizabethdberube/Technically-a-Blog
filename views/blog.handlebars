<div href="/blog" class="blog">
    <form method="post" class="blogForm">
        <div class="form-group">
            <label for="exampleFormControlInput1" class="formText">Title</label>
            <input type="text" name="title" class="form-control" id="title"
                placeholder="Enter the title of your post here">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1" class="formText">Post</label>
            <textarea class="form-control" name="blogContent" id="blog" rows="3"
                placeholder="Enter your post here"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" placeholder="Enter post here">Submit</button>
        <a class="btn btn-primary " href="/dashboard">Back</a>

    </form>
</div>