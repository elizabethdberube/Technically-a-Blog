<div href="/blog" class="blog">
    <form method="post" data-blog-id="{{blog_id}}" class="commentForm">
        <div class="form-group">
            <label for="exampleFormControlTextarea1" class="formText">Comment</label>
            <textarea class="form-control" name="commentContent" id="comment" rows="3"
                placeholder="Enter your post here"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" placeholder="Enter post here">Submit</button>


    </form>
</div>

<script src="/js/blog.js"></script>