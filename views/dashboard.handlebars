<div class="blogDiv">
    <a class="btn btn-primary" href="/blog">Add a post</a>
</div>

{{#each blogs as |blog|}}
<div class="posts"></div>
<div class="container">
    <div class="card border-primary mb-3 dashboardBlogs" style="max-width: 66rem;">

        <div class="card-header">{{blog.date_created}}</div>
        <div class="card-header subjectLine">
            <div>Subject: {{ blog.title }}</div>
            <div>By: {{ blog.user.name}}</div>

        </div>
        <div class="card-body text-primary">
            <p class="card-text">{{blog.blogContent}}</p>
            <form class="deleteData" data-id="{{blog.id}}" action="/dashboard/{{blog.id}}" method="DELETE">
                <button id="oneButton" type="submit" class="btn btn-primary">Delete</button>
                <a id="twoButton" href="/updateBlog/{{blog.id}}" class="btn btn-primary">Update</a>
            </form>

        </div>
    </div>
</div>
</div>

{{/each}}

<script src="/js/blog.js"></script>